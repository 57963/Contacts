package com.contacts.contact;

public class Contact {
	private String firstName = "";
	private String surName = "";
	private String homeNumber = "";
	private String city = "";
	private String[] callingCodes = {"Clitheroe","","Bournemouth","","Bolton"};
	
	public Contact(){
	}
	public String getFirstName() {
		return firstName;
	}
	public void setFirstName(String firstName) {
		this.firstName = firstName;
	}
	public String getSurName() {
		return surName;
	}
	public void setSurName(String surName) {
		this.surName = surName;
	}
	public String getCity() {
		return city;
	}
	public void setCity(String city) {
		this.city = city;
	}
	
	public void setNumber(String number) {
		number = number.replaceAll(" ", "");
		boolean valid = true;
		String type = "";
		if(!number.startsWith("0")){
			System.out.println("All UK numbers must start with 0, no changes have been made");
			valid = false;
		}
		if(number.startsWith("01")){
			type = "home";
			try{
				setCity(callingCodes[Integer.parseInt(number.substring(2, 5))-200]);
			} catch(Exception ex){
				System.out.println("could not find city");
			}
		}
		if(valid){
			switch(type){
			case "home": setHomeNumber(number);break;
			}
		}
	}
	public String getHomeNumber() {
		return homeNumber;
	}
	public void setHomeNumber(String homeNumber) {
		this.homeNumber = homeNumber;
	}
}
