package com.contacts.cmd;

import java.util.Scanner;

import com.contacts.returns.Returns;

public class Cmd {
	Scanner keyboard = new Scanner(System.in);
	String[] input = new String[1];
	public Cmd() {
		
	}
	
	public Returns run(){
		input = recieve("Enter a command: ").split(" ");
		switch (input[0]) {
		case "add":
			try {
				addContact(input[1]);
			} catch (ArrayIndexOutOfBoundsException ex) {
				send("Please specify a contact name.");
			}
			return Returns.ADD;
		default:
			send("Please enter a valid command.");
		}
		return null;
	}

	public String recieve(String hint) {
		System.out.print(hint);
		return keyboard.nextLine();
	}

	public void send(String hint) {
		System.out.println(hint);
	}

	public void addContact(String name) {
		send("adding user " + name);
	}
}
