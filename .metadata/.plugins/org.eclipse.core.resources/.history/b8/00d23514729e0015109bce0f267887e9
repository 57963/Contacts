package com.contacts.core;

import com.contacts.contact.Contact;
import com.contacts.contactList.ContactList;

public class Core {
	ContactList list = new ContactList();
	public static void main(String[] args){
		@SuppressWarnings("unused")
		Core core = new Core();
	}
	
	public Core(){
		addContact("me");
		System.out.println(list.getList().get(0).getFirstName());
		editContact(0,"name","you");
		System.out.println(list.getList().get(0).getFirstName());
	}
	
	public void addContact(String name){
		list.add(new Contact(name));
	}
	
	public void removeContact(int index){
		list.remove(index);
	}
	
	public void editContact(int index, String attr, String newVal){
		list.edit(index,attr,newVal);
	}
	
	public Contact getContact(int index){
		return list.get(index);
	}
}
